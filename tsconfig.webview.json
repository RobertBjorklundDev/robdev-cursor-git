{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2020", "dom"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/app/webview/**/*.ts",
    "src/app/webview/**/*.tsx",
    "src/features/**/webview/**/*.ts",
    "src/features/**/webview/**/*.tsx",
    "src/shared/webview/**/*.ts",
    "src/shared/webview/**/*.tsx"
  ]
}

{
  "name": "cursor-branch-switcher",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "displayName": "RobDev Git",
  "description": "Show top 5 recently used local branches and switch with one click.",
  "version": "0.0.23",
  "publisher": "local",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "extensionDependencies": [
    "vscode.github-authentication"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "branchSwitcher",
          "title": "RobDev Git",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "branchSwitcher": [
        {
          "id": "recentBranchesView",
          "name": "Recent Branches",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "branchSwitcher.switchBranch",
        "title": "Switch Branch"
      },
      {
        "command": "branchSwitcher.mergeFromBase",
        "title": "Merge Base Into Branch"
      },
      {
        "command": "branchSwitcher.signInGithub",
        "title": "Sign In to GitHub"
      },
      {
        "command": "branchSwitcher.switchGithubAccount",
        "title": "Switch GitHub Account"
      },
      {
        "command": "branchSwitcher.openGithubAccounts",
        "title": "Open GitHub Accounts"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "branchSwitcher.mergeFromBase",
          "when": "view == recentBranchesView && viewItem == branchSwitcher.branchItem",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "build": "npm run build:webview && tsc -p .",
    "build:webview": "npm run build:webview:js && npm run build:webview:css",
    "build:webview:js": "esbuild webview/main.tsx --bundle --platform=browser --format=iife --target=es2020 --outfile=media/webview.js",
    "build:webview:css": "tailwindcss -i webview/styles.css -o media/webview.css --minify",
    "watch": "tsc -w -p .",
    "package": "node scripts/package.js"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.2.1",
    "@types/node": "^25.3.2",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.27.3",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.6.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "lucide-react": "^0.575.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}

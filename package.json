{
  "name": "cursor-branch-switcher",
  "displayName": "RobDev Git",
  "description": "Show top 5 recently used local branches and switch with one click.",
  "version": "0.0.8",
  "publisher": "local",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "branchSwitcher",
          "title": "RobDev Git",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "branchSwitcher": [
        {
          "id": "recentBranchesView",
          "name": "Recent Branches",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "branchSwitcher.switchBranch",
        "title": "Switch Branch"
      },
      {
        "command": "branchSwitcher.mergeFromBase",
        "title": "Merge in Base"
      },
      {
        "command": "branchSwitcher.refresh",
        "title": "Refresh Recent Branches"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "branchSwitcher.refresh",
          "when": "view == recentBranchesView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "branchSwitcher.mergeFromBase",
          "when": "view == recentBranchesView && viewItem == branchSwitcher.branchItem",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "package": "node scripts/package.js"
  },
  "devDependencies": {
    "@types/node": "^25.3.2",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.6.3",
    "vsce": "^2.15.0"
  }
}
